<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#A6000000"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="30sp"
                android:paddingLeft="240dp"
                android:text="@string/YourScore" />
            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/tv_diem"
                android:textSize="30sp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="280dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_clock"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:text="@string/time"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:textSize="25sp"
                android:text="2"

                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_so1"
                android:layout_width="wrap_content"
                android:hint="13"
                android:textSize="80sp"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_plus"
                android:layout_width="wrap_content"
                android:text="+"
                android:textSize="80sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_so2"
                android:layout_width="wrap_content"
                android:hint="5"
                android:textSize="80sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_equals"
                android:layout_width="wrap_content"
                android:text="="
                android:textSize="80sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:hint="18"
                android:textSize="80sp"
                android:layout_height="wrap_content" />



        </LinearLayout><LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
         android:layout_marginTop="100dp"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_check_true"
            android:layout_width="80dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_check"
            android:layout_height="80dp" />
        <ImageView
            android:id="@+id/iv_check_false"
            android:layout_width="80dp"
            android:layout_marginLeft="130dp"
            android:src="@drawable/ic_false"
            android:layout_height="80dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>